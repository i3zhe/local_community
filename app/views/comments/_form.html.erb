<%= form_for([@shop, @shop.comments.build]) do |f| %>
	
  <div class="field">
    <%= f.label "Your name", :commenter %> <br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label "Comment", :body %> <br />
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>  

<% end %>
