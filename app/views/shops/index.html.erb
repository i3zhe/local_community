<h1>Listing shops</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Slogan</th>
    <th>Address</th>
    <th>Description</th>
    <th>Logo</th>
    <th>Weight</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shops.each do |shop| %>
  <tr>
    <td><%= shop.name %></td>
    <td><%= shop.slogan %></td>
    <td><%= shop.address %></td>
    <td><%= shop.description %></td>
    <td><%= shop.logo %></td>
    <td><%= shop.weight %></td>
    <td><%= link_to 'Show', shop %></td>
    <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
    <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

